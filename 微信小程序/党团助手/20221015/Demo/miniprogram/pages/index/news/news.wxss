
.news{
  display: inline-block;
  width:100%;
  padding: 10rpx;
}
.newsbox{
  position: relative;
  background-color: 	#ffffff;
  margin-top: 10rpx;
  width: 100%;
  height: 225rpx;
  border-radius: 30rpx;
  box-shadow: 0rpx 0rpx 10rpx 5rpx rgb(194, 184, 184) ;
}
.news-title{
  position: absolute;
  display: inline-block;
  margin: 30rpx 20rpx 0 25rpx;
  font-size: 33rpx;
  font-weight: normal;
  width: 395rpx;
}
.news-image{
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  display: inline-block;
  width: 230rpx;
  height: 180rpx;
  border-radius: 20rpx;
  box-shadow: 10rpx 10rpx 10rpx rgba(0, 0, 0, .5);
}
.news-line{
  height: 2rpx;
  background-color: gainsboro;
  position: absolute;
  left: 10rpx;
  top: 140rpx;
  width: 395rpx;
}
.news-text{
  display: inline-block;
  position: absolute;
  top: 130rpx;
  left: 10rpx;
  font-size: 24rpx;
  color: #8F8F90;
}
.collect{
  display: inline-block;
  width: 61rpx;
  height: 40rpx;
}
.loading{
  text-align: center;
  padding: 20rpx 0;
}