/* pages/me/me.wxss */
@import '../../images/iconfont/iconfont.wxss';
.personalContainer {
  width: 100%;
  height: 100%;
}
.personalContainer .user-section {
  height: 580rpx;
  position: relative;
  padding: 100rpx 30rpx 0;
}
.user-section .bg {
  position: absolute;
  left: 0;
  top: -20rpx;
  width: 100%;
  height: 400rpx;
  opacity: 0.8;
  filter: blur(0.4px);
}


.user-info-box{
  display:flex;
  align-items:center;
  position:relative;
  z-index: 1;
  width: 600rpx;
  word-break: break-all;
}

.user-info-box .portrait{
  width: 140rpx;
  height: 140rpx;
  border:5rpx solid #fff;
  border-radius: 50%;
}
.user-info-box .username{
  font-size: 35rpx;
  font-weight: 400;
  color: #303133;
  margin-left: 30rpx;
  white-space: nowrap;
}

.cover-container{
  margin-top: -220rpx;
  padding: 0 30rpx;
  position:relative;
  background: #f5f5f5;
  padding-bottom: 20rpx;
}

.cover-container .arc{
  position:absolute;
  left: 0;
  top: -34rpx;
  width: 100%;
  height: 36rpx;
}


/* 导航部分 */
.cover-container .nav-section {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-radius: 15rpx;
}


.nav-section .nav-item {
  width: 33%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-section .nav-item .iconfont {
  font-size: 52rpx;
  color: #d43c33;
  line-height: 70rpx;
}

.nav-section .nav-item text:last-child {
  font-size: 22rpx;

}
.feedback{
  font-size: 22rpx;
  color: #333;
  float: left;
  /* background-color: #d43c33; */
  height: 90rpx;
  margin-top: -60rpx;
  padding-top: 60rpx;
}


/* 个人中心列表 */
.personalContent {
  background: #fff;
  margin-top: 20rpx;
}

/* 最近浏览 */
.personalContent .scrollView {
  display: flex;
  height: 160rpx;
}
.personalContent .recentPlay {
  display: flex;
}

.recentPlayContainer .title {
  font-size: 26rpx;
  padding: 10rpx;
  color: #333;
  line-height: 80rpx;
}

.personalContent .recentPlay image {
  width: 160rpx;
  height: 160rpx;
  margin-left: 20rpx;
  border-radius: 20rpx;
}


.cardList {
  margin-top: 20rpx;
}
.cardList .card-item{
  border-top: 1rpx solid #eee;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  color: #333;
  padding-left: 20rpx;
}
.cardList .card-item .more {
  float: right;
  line-height: 100rpx;
  position: relative;
  left: -20rpx;
  top: -100rpx;
  color: rgb(153, 153, 153);
}
.contact{
  font-size: 26rpx;
}

/* 最近浏览记录 */
.recentScroll {
  display: flex;
  height: 200rpx;
}
.recentItem {
  margin-right: 20rpx;
}
.recentItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}