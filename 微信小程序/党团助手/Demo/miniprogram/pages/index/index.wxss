/**index.wxss**/
.index {
  background-color: rgba(236, 234, 234, 0.877);
}

.top_top {
  padding: 20rpx;
  padding-top: 30rpx;
  border-radius: 10rpx;
}

.top {
  height: 400rpx;
  border-radius: 20rpx;
}

.top swiper-item {
  border-radius: 20rpx;
}

.top image {
  width: 100%;
  height: 450rpx;
}

.mid {
  background-color: rgb(255, 255, 255);
  width: 715rpx;
  height: 160rpx;
  margin: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: rgba(0, 0, 0, 0.2) 2rpx 8rpx 36rpx 2rpx;
}

.img {
  width: 50rpx;
  height: 50rpx;
  margin: 10rpx;
}
.aa {
  font-size: 28rpx;
}

.foot {
  background-color: rgb(255, 255, 255);
  /* padding: 20rpx; */
  border-radius: 20rpx;
  margin: 35rpx 20rpx;
  padding-top: 5rpx;
  padding-bottom: 15rpx;
}

.title {
  text-align: center;
  /* margin: 50rpx 0 30rpx 0; */
  padding: 30rpx;
}

.line {
  width: 500rpx;
  height: 3rpx;
  background-color: #aa0803;
  margin: 20rpx auto 0 auto;
  box-shadow: 4rpx 4rpx 8rpx 2rpx rgb(194, 184, 184);
}

.title text {
  color: #aa0803;
}

.under {
  /* background-color: #e08a88; */
  padding-top: 2rpx;
  text-align-last: auto;
  border-radius: 20rpx;

}

.text_a {
  width: 93%;
  height: 260rpx;
  background-color: rgb(255, 255, 255);
  margin: 20rpx auto;
  padding-top: 20rpx;
  border-radius: 20rpx;
  padding-left: 10rpx;
  padding-right: 20rpx;
  box-shadow: 0rpx 0rpx 10rpx 5rpx rgb(194, 184, 184);
}

.title_sec {
  display: block;
  width: 93%;
  margin: 10rpx 0 5rpx 20rpx;
  font-size: 33rpx;
  font-weight: normal;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.text_a navigator image {
  width: 200rpx;
  height: 150rpx;
  margin: 10rpx 10rpx 10rpx 20rpx;
  float: left;
  border-radius: 20rpx;
}

.text_a .show {
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  width: 50%;
  margin: 20rpx 10rpx 0 40rpx;
  text-indent: 2em;
  font-weight: lighter;
}