.productNav{
  background-color: #e2e2e2;
  height: 100%;
  display: flex;
  flex-direction: row;
  font-family: "Microsoft YaHei"
}
.left{
  display: inline-block;
  height: 100%;
  position: fixed;
  width: 25%;
  font-size: 37rpx;
  background-color: #f4f4f4;
}
.left view{
  text-align: center;
  height: 32%;
  line-height: 90rpx;
}
.selected{
  background-color: #fff;
  border-left: 4px solid #ab0904;
  border-bottom: 4px solid #ab0904;
  font-weight: bold;
  color: #ab0904;
  width: 90%;
  border-bottom-left-radius: 20rpx;
  border-top-left-radius: 20rpx;
  box-shadow: -5rpx 5rpx 8rpx 4rpx rgb(194, 184, 184) ;
  margin: 15rpx 0 15rpx 19rpx;
}
.normal{
  background-color: #f4f4f4;
  border-bottom: 1px solid #f2f2f2;
}
.right1{
  display: inline-block;
  width:75%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  /* height: 1700rpx; */
  margin-left: 25%;
}
.newsbox{
  display: inline-block;
  position: relative;
  background-color: 	#ffffff;
  margin-top: 10rpx;
  width: 96%;
  margin-left:14rpx;
  height: 225rpx;
  border-radius: 30rpx;
  box-shadow: 0rpx 0rpx 10rpx 5rpx rgb(194, 184, 184) ;
}
.news-title{
  position: absolute;
  display: inline-block;
  margin: 20rpx 20rpx 0 25rpx;
  font-size: 33rpx;
  font-weight: normal;
  width: 300rpx;
}
.news-image{
  margin-left: 320rpx;
  display: inline-block;
  margin-top: 27rpx;
  width: 210rpx;
  height: 160rpx;
  border-radius: 20rpx;
}
.news-line{
  height: 2rpx;
  background-color: gainsboro;
  position: absolute;
  left: 10rpx;
  top: 140rpx;
  width: 300rpx;
}
.news-text{
  display: inline-block;
  position: absolute;
  top: 130rpx;
  left: 10rpx;
  font-size: 24rpx;
  color: #8F8F90;
}
