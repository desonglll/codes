.collect{
  display: inline-block;
  width: 61rpx;
  height: 40rpx;
}

.right2{
  display: inline-block;
  padding: 10rpx 0 0 5rpx;
  width:77%;
  /* height: 2000rpx; */
  margin-left: 25%;
  margin-bottom: 10rpx;
}
.bookbox{
  background-color: white;
  border-radius: 20rpx; 
  box-shadow: 0rpx 0rpx 10rpx 5rpx rgb(194, 184, 184) ;
  display: inline-block;
  width: 47%;
  height: 410rpx;
  margin: 10rpx 8rpx;
}
.book1-img{
  width: 220rpx;
  height: 270rpx;
  margin-top: 20rpx;
  margin-left: 24rpx;
}
.book-title{
  display: inline-block;
  width: 100%;
  font-size: 33rpx;
  text-align: center;
  font-weight: normal;
}
.book-writer{
  display: inline-block;
  width: 100%;
  font-size: 28rpx;
  text-align: center;
  font-weight: normal;
  color: rgb(75, 42, 3);
}

.right3{
  display: inline-block;
